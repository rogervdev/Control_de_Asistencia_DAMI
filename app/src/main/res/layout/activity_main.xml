<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_user"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Control de Asistencia"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnEscanearQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESCANEAR QR"
        android:layout_marginTop="16dp"
        android:paddingVertical="16dp"
        android:paddingHorizontal="35dp"
        android:backgroundTint="#C83030"/>

    <Button
        android:id="@+id/btnPanelAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PANEL DE ADMINISTRACIÃ“N"
        android:layout_marginTop="16dp"
        android:paddingVertical="16dp"
        android:paddingHorizontal="35dp"
        android:backgroundTint="#007BF5"/>


</LinearLayout>
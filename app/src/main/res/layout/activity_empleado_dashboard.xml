<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmpleadoDashboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--  Hola, Mar铆a L贸pez -->
            <TextView
                android:id="@+id/tvBienvenida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hola, Mar铆a L贸pez"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <!--  Estado: Presente -->
            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado: Presente"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <!--  Entrada registrada: 08:12 AM -->
            <TextView
                android:id="@+id/tvUltimaMarcacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrada registrada: 08:12 AM"
                android:textSize="15sp"
                android:layout_marginTop="4dp" />

            <!-- Bot贸n de acci贸n (opcional, seg煤n flujo) -->
            <Button
                android:id="@+id/btnAccionAsistencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marcar Salida"
                android:layout_marginTop="24dp"
                android:visibility="gone" /> <!-- Puedes mostrarlo solo si es necesario -->

            <!--  ltimos registros -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ltimos registros"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="32dp" />

            <!-- Lista de d铆as -->
            <LinearLayout
                android:id="@+id/containerHistorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp" />

            <!--  Volver al inicio -->
            <TextView
                android:id="@+id/tvVolverInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Volver al inicio"
                android:textColor="#007BFF"
                android:layout_marginTop="24dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>